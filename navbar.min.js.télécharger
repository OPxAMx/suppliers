var timeouts=[],l=false,il=false;const lev=["click","tap"];document.querySelector(".panier").addEventListener("mouseover",()=>{document.querySelector(".modal-drop").classList.add("hovered");document.querySelector(".modal-back").classList.add("hovered")});document.querySelector(".modal-back").addEventListener("mouseover",ct);document.querySelector(".search").addEventListener("mouseover",ct);document.querySelectorAll("#navbar > a").forEach(e=>e.addEventListener("mouseover",ct));document.querySelector(".modal-drop").addEventListener("mouseover",()=>{if(timeouts){timeouts.filter(e=>e!=null).forEach(clearTimeout);timeouts=[]}});document.querySelector(".connection")?.addEventListener("mouseover",()=>{document.querySelector(".modal-con").classList.add("hovered");document.querySelector(".modal-back").classList.add("hovered");document.querySelector(".modal-drop").classList.remove("hovered")});lev.forEach(ev=>{document.querySelector(".burger").addEventListener(ev,()=>{ct();document.querySelector(".mobile-drop").classList.toggle("active")})});function ct(){timeouts.push(setTimeout(()=>document.querySelector(".modal-drop").classList.remove("hovered"),100));timeouts.push(setTimeout(()=>document.querySelector(".modal-back").classList.remove("hovered"),100))}